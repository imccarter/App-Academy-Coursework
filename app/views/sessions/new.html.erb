<h2>Sign In</h2>
<form action='<%= session_url %>' method='post'>
  <%= auth_token %>
  <br>
  <label for='username'>
    Username</label>
    <input type='text' name='user[username]' value='<%= @user.username %>' id='username'><br>

  <label for='password'>
    Password</label>
    <input type='password' name='user[password]' id='password'><br>

  <input type='submit' value='Sign In'>
</form>

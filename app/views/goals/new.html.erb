<h1>New Goal</h1>
<form action='<%= goals_url %>' method="post">
  <%= auth_token %>
  <label>Title
    <input type="text" name="goal[title]" value="">
  </label>
  <br>
  <label>Content
    <input type="text" name="goal[content]" value="">
  </label>
  <br>
  Goal Type:
  <label for='private'>Private
    <input type='radio' name='goal[private_goal]' value ='true' id='private'>
  </label>
  <label for="public">Public
    <input type='radio' name='goal[private_goal]' value ='false' id='public'>
  </label>
  <br>
  <input type="submit" value="Create Goal">

</form>
